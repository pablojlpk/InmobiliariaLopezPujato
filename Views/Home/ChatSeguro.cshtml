<div class="container" style="display:none" id="divChat">
	<div class="row">&nbsp;</div>
	<div class="row">
		<div class="col-2">Destinatario</div>
		<div class="col-4">
			<select id="destinoInput">
				<option value="" selected>Todos</option>
			</select>
		</div>
	</div>
	<div class="row">
		<div class="col-2">Mensaje</div>
		<div class="col-4"><input type="text" id="messageInput" /></div>
	</div>
	<div class="row">&nbsp;</div>
	<div class="row">
		<div class="col-6">
			<input type="button" id="sendButton" value="Send Message" />
		</div>
	</div>
</div>
<div class="container" id="divLogin">
	<div class="row">&nbsp;</div>
	<div class="row">
		<div class="col-2">Usuario</div>
		<div class="col-4"><input type="text" id="userInput" /></div>
	</div>
	<div class="row">
		<div class="col-2">Contraseña</div>
		<div class="col-4"><input type="password" id="passInput" /></div>
	</div>
	<div class="row">&nbsp;</div>
	<div class="row">
		<div class="col-6">
			<input type="button" id="loginButton" value="Login" />
		</div>
	</div>
</div>
<div class="row">
	<div class="col-12">
		<hr />
	</div>
</div>
<div class="row">
	<div class="col-6">
		<ul id="messagesList"></ul>
	</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.10/signalr.min.js"></script>
<script src="~/js/chatPlus.js"></script>